<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10"
    tools:context="com.example.andreasnordstrom.madcw1.activity.CalcActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="@dimen/dimen_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_remaining"
            android:textSize="@dimen/font_11"/>

        <TextView
            android:id="@+id/text_remaining_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_time"
            android:textSize="@dimen/font_11"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_11"
            android:text="@string/second"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginEnd="@dimen/dimen_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:text="@string/guess"/>

        <TextView
            android:id="@+id/text_expression"
            android:layout_width="wrap_content"
            android:textSize="@dimen/font_12"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:text="@string/equals"/>

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_12"
            android:text="@string/quiz"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_evaluation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:gravity="center"
        android:textSize="@dimen/font_20"/>

    <TextView
        android:id="@+id/text_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/font_15"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_num1"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_1"
                android:textSize="@dimen/font_11"
                android:onClick="inputValue"
                style=""/>

            <Button
                android:id="@+id/button_num2"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:textSize="@dimen/font_11"
                android:text="@string/num_2"
                android:onClick="inputValue"
                style=""/>

            <Button
                android:id="@+id/button_num3"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:textSize="@dimen/font_11"
                android:onClick="inputValue"
                android:text="@string/num_3"
                style=""/>

            <Button
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:visibility="invisible"
                style=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_num4"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_4"
                android:textSize="@dimen/font_11"
                android:onClick="inputValue"
                style=""/>

            <Button
                android:id="@+id/button_num5"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_5"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:id="@+id/button_num6"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_6"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:visibility="invisible"
                style=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_num7"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_7"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:id="@+id/button_num8"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_8"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:id="@+id/button_num9"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_9"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:visibility="invisible"
                style=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_del"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:textSize="@dimen/font_11"
                android:text="@string/del"
                android:onClick="deleteValue"
                style=""/>

            <Button
                android:id="@+id/button_num0"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/num_0"
                android:onClick="inputValue"
                android:textSize="@dimen/font_11"
                style=""/>

            <Button
                android:id="@+id/button_equal"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/equal_mark"
                android:textSize="@dimen/font_11"
                android:onClick="calcExpression"
                style=""/>

            <Button
                android:id="@+id/button_minus"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:text="@string/minus"
                android:textSize="@dimen/font_11"
                android:onClick="inputValue"
                style=""/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/button_end_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="endGame"
            android:text="@string/end_game"/>

    </LinearLayout>

</LinearLayout>
